{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adfAnalytics": {            
            "type": "string"
        },
        "resourceTags": {
            "type": "object"
        },
        "subscriptionId": {
            "type": "string",
            "defaultValue": "[subscription().subscriptionId]"
        },
        "logAnalyticsName": {
            "type": "string"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for your deployment."
            }
        }  
    },
    "variables": {
        "workspaceResourceId": "[concat('/subscriptions/', parameters('subscriptionId'),'/resourceGroups/', resourceGroup().name, '/providers/Microsoft.OperationalInsights/workspaces/', parameters('logAnalyticsName') )]"
    },
    "resources": [
        {
            "type": "Microsoft.OperationsManagement/solutions",
            "apiVersion": "2015-11-01-preview",
            "name": "[parameters('adfAnalytics')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('resourceTags')]",
            "plan": {
                "name": "[parameters('adfAnalytics')]",
                "promotionCode": "",
                "product": "OMSGallery/AzureDataFactoryAnalytics",
                "publisher": "Microsoft"
            },
            "properties": {
                "workspaceResourceId": "[variables('workspaceResourceId')]",
                "containedResources": [
                    "[concat(variables('workspaceResourceId'), concat('/views/', parameters('adfAnalytics')))]"
                ]
            }
        }
    ]
}